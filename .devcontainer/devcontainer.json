{
	"name": "Alpine Angular Dev Container",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.19",
	"settings": {
		"terminal.integrated.defaultProfile.linux": "zsh"
	},
	"extensions": [
		"angular.ng-template"
	],
	"forwardPorts": [
		4200
	],
	"postCreateCommand": "npm install -g @angular/cli && npm install",
	"remoteUser": "vscode"
}
